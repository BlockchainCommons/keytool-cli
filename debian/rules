#!/usr/bin/make -f
# SHELL := /bin/bash -xv

# See debhelper(7) (uncomment to enable).
# Output every command that modifies files on the build system.
#export DH_VERBOSE = 1


# See FEATURE AREAS in dpkg-buildflags(1).
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# See ENVIRONMENT in dpkg-buildflags(1).
# Package maintainers to append CFLAGS.
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# Package maintainers to append LDFLAGS.
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed
export CC=clang 
export CXX=clang++
export SYSROOT=/tmp/sysroot
export LIB=${SYSROOT}/lib
export INCLUDE=${SYSROOT}/include

export CFLAGS += -I${INCLUDE}
export CXXFLAGS += -I${INCLUDE}
export LDFLAGS += -L${LIB}


%:
	$(shell mkdir -p ${LIB}; mkdir -p ${INCLUDE}) 

	cd deps/bc-crypto-base && \
	autoreconf --install && \
	./configure --prefix ${SYSROOT} && \
	make check && \
	make install && make clean 

	cd deps/bc-ur && \
	autoreconf --install && \
	./configure --prefix ${SYSROOT} && \
	make install && make clean 

	cd deps/libwally-core && \
	autoreconf --install -v && \
	./configure "${WALLY_CONFIGURE-}" --disable-shared --disable-tests --prefix ${SYSROOT} && \
	make install && \
	$(shell cd deps/libwally-core && ls ./tools/cleanup.sh) 

	cd deps/argp-standalone/argp-standalone && \
	autoreconf --install && \
	./configure --prefix ${SYSROOT} && \
	make install && \
	cp libargp.a ${SYSROOT}/lib/ && \
	cp argp.h ${SYSROOT}/include/ && \
	make distclean

	dh $@

#override_dh_autoreconf:
#	dh_autoreconf

# dh_make generated override targets.
# This is an example for Cmake (see <https://bugs.debian.org/641051>).
# override_dh_auto_configure:
# 	./configure

# override_dh_auto_build:
# 	dh_auto_build

# override_dh_auto_test:
# 	dh_auto_test

override_dh_auto_clean:
	cd deps/bc-crypto-base && make clean && make distclean || true
	cd deps/bc-ur && make distclean || true
	cd deps/libwally-core/src/secp256k1 && make distclean || true
	$(shell cd deps/libwally-core && tools/cleanup.sh && echo "Cleanup complete?") || true
	cd deps/argp-standalone/argp-standalone && make clean || true
	cd src && make distclean || true
	[ -f ./Makefile ] && make distclean || true
	dh_auto_clean

override_dh_dwz:
	true
